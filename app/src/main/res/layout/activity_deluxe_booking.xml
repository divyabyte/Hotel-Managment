<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeluxeBooking">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookRoom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deluxe Booking"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#D5C93535"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:id="@+id/userI"
            android:src="@drawable/user" />

        <EditText
            android:id="@+id/user"
            android:layout_width="230dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="70dp"
            android:hint="Name Of User"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_below="@id/userI"
            android:layout_marginTop="32dp"
            android:id="@+id/call"
            android:src="@drawable/call" />


        <EditText
            android:id="@+id/phoneCall"
            android:layout_width="230dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/user"
            android:hint="Mobile Number"
            android:ems="10"
            android:inputType="phone"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/call"
            android:layout_marginTop="36dp"
            android:layout_marginStart="30dp"
            android:id="@+id/msg"
            android:src="@drawable/message" />


        <EditText
            android:id="@+id/email"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/phoneCall"
            android:hint="Email"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/msg"
            android:id="@+id/rooms"
            android:layout_marginTop="36dp"
            android:src="@drawable/door" />


        <EditText
            android:id="@+id/noOfRooms"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/email"
            android:hint="No Of Rooms"
            android:inputType="number"
            android:textSize="20dp" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/rooms"
            android:id="@+id/guests"
            android:layout_marginTop="37dp"
            android:src="@drawable/group" />


        <EditText
            android:id="@+id/noOfGuests"
            android:layout_width="230dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/noOfRooms"
            android:hint="No of Guests"
            android:inputType="number"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:id="@+id/in_date"
            android:layout_below="@id/guests"
            android:layout_marginStart="30dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/calendar" />



        <EditText
            android:id="@+id/check_in"
            android:layout_width="230dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/noOfGuests"
            android:inputType="date"
            android:hint="dd/MM/yyyy check-in"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/in_date"
            android:id="@+id/out_date"
            android:layout_marginStart="30dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/booking" />



        <EditText
            android:id="@+id/check_out"
            android:layout_width="230dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/check_in"
            android:inputType="date"
            android:hint="dd/MM/yyyy check-out"
            android:textSize="20dp" />



        <Button
            android:id="@+id/continue_to_book"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/check_out"
            android:layout_marginTop="20dp"
            android:text="Book"
            android:onClick="DeluxeBooking"
            android:layout_marginBottom="30dp"
            android:background="#7E7A2B76"
            />



    </RelativeLayout>

</ScrollView>